<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/cardview_light_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_comment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/blo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_comment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_comment"
        app:layout_constraintStart_toEndOf="@+id/iv_user_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_user_comment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_description_comment"
        android:layout_width="0dp"
        android:textColor="#000000"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_user_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_user_comment"
        app:layout_constraintVertical_bias="0.718" />

    <TextView
        android:id="@+id/tv_time_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintTop_toTopOf="@+id/tv_name_comment"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>