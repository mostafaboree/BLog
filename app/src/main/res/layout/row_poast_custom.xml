<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/row_iv_post"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_row_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/gredin"
        app:layout_constraintBottom_toBottomOf="@+id/row_iv_post"
        app:layout_constraintEnd_toEndOf="@+id/row_iv_post"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/row_iv_post"
        app:layout_constraintTop_toTopOf="@+id/row_iv_post"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_row"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/row_iv_post"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="@+id/iv_row_user"
        app:layout_constraintTop_toTopOf="@+id/iv_row_user"
        app:layout_constraintVertical_bias="0.879" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="@+id/row_iv_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/row_iv_post"
        app:layout_constraintTop_toTopOf="@+id/iv_row_user"
        app:layout_constraintVertical_bias="0.88" />

    <ImageView
        android:id="@+id/iv_love_invisible"
        android:layout_width="59dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/row_iv_post"
        app:srcCompat="@drawable/love" />

    <ImageView
        android:id="@+id/iv_love_visible"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_love_invisible"
        app:layout_constraintEnd_toEndOf="@+id/iv_love_invisible"
        app:layout_constraintTop_toBottomOf="@+id/row_iv_post"
        app:srcCompat="@drawable/lovehert" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_love_invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_iv_post"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/commet" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_love_invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_love_invisible"
        app:layout_constraintVertical_bias="0.826"
        app:srcCompat="@drawable/ic_menu_share" />

</androidx.constraintlayout.widget.ConstraintLayout>